<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/download" />

    <EditText
        android:id="@+id/field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 1" />

    <EditText
        android:id="@+id/field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 2" />

    <EditText
        android:id="@+id/field3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 3" />

    <EditText
        android:id="@+id/field4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 4" />

    <EditText
        android:id="@+id/field5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 5" />

    <EditText
        android:id="@+id/field6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 6" />

    <EditText
        android:id="@+id/field7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 7" />

    <EditText
        android:id="@+id/field8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 8" />

    <EditText
        android:id="@+id/field9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 9" />

    <EditText
        android:id="@+id/field10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Field 10" />

</LinearLayout>
